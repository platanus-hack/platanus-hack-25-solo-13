---
import Layout from '../layouts/Layout.astro';
---

<Layout title="System Health - Lumera App">
  <main class="min-h-screen bg-gradient-to-br from-gray-900 via-purple-900 to-gray-900 flex items-center justify-center p-4">
    <div id="health-card" class="bg-white/10 backdrop-blur-lg rounded-2xl shadow-2xl p-8 max-w-md w-full border border-white/20">
      <h1 class="text-4xl font-bold text-white mb-2">System Health</h1>
      <p class="text-purple-300 mb-8">Backend & Database Status</p>

      <div class="space-y-4">
        <div class="bg-black/30 rounded-lg p-4 border border-white/10">
          <div class="flex items-center justify-between mb-2">
            <span class="text-gray-300 font-medium">API Status</span>
            <div class="flex items-center gap-2">
              <div id="api-indicator" class="w-3 h-3 rounded-full bg-yellow-500"></div>
              <span id="api-status" class="text-white font-semibold">loading...</span>
            </div>
          </div>
        </div>

        <div class="bg-black/30 rounded-lg p-4 border border-white/10">
          <div class="flex items-center justify-between mb-2">
            <span class="text-gray-300 font-medium">Database</span>
            <div class="flex items-center gap-2">
              <div id="db-indicator" class="w-3 h-3 rounded-full bg-yellow-500"></div>
              <span id="db-status" class="text-white font-semibold">loading...</span>
            </div>
          </div>
        </div>

        <div id="timestamp-container" class="bg-black/30 rounded-lg p-4 border border-white/10 hidden">
          <span id="timestamp" class="text-gray-300 text-sm"></span>
        </div>

        <div id="error-container" class="bg-red-500/20 rounded-lg p-4 border border-red-500/50 hidden">
          <p id="error-message" class="text-red-200 text-sm"></p>
        </div>
      </div>

      <button
        id="refresh-btn"
        class="mt-8 w-full bg-purple-600 hover:bg-purple-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-200 shadow-lg hover:shadow-purple-500/50"
      >
        Refresh Status
      </button>

      <div class="mt-6 text-center">
        <p class="text-gray-400 text-sm">
          Go + Svelte + PostgreSQL + Docker
        </p>
      </div>

      <div class="mt-4 text-center">
        <a href="/" class="text-indigo-400 hover:text-indigo-300 text-sm">ê Back to Dashboard</a>
      </div>
    </div>
  </main>

  <script>
    import gsap from 'gsap';

    async function checkHealth() {
      try {
        const response = await fetch('/api/health');
        const data = await response.json();

        const apiIndicator = document.getElementById('api-indicator');
        const apiStatus = document.getElementById('api-status');
        const dbIndicator = document.getElementById('db-indicator');
        const dbStatus = document.getElementById('db-status');
        const timestampContainer = document.getElementById('timestamp-container');
        const timestamp = document.getElementById('timestamp');
        const errorContainer = document.getElementById('error-container');

        if (apiIndicator && apiStatus && dbIndicator && dbStatus) {
          apiStatus.textContent = data.status;
          apiIndicator.className = 'w-3 h-3 rounded-full ' + (data.status === 'ok' ? 'bg-green-500' : 'bg-red-500');

          dbStatus.textContent = data.database;
          dbIndicator.className = 'w-3 h-3 rounded-full ' + (data.database === 'connected' ? 'bg-green-500' : 'bg-red-500');

          if (timestamp && timestampContainer) {
            timestamp.textContent = 'Last check: ' + new Date(data.timestamp).toLocaleString();
            timestampContainer.classList.remove('hidden');
          }

          if (errorContainer) {
            errorContainer.classList.add('hidden');
          }
        }
      } catch (error) {
        const apiIndicator = document.getElementById('api-indicator');
        const apiStatus = document.getElementById('api-status');
        const dbIndicator = document.getElementById('db-indicator');
        const dbStatus = document.getElementById('db-status');
        const errorContainer = document.getElementById('error-container');
        const errorMessage = document.getElementById('error-message');

        if (apiIndicator && apiStatus && dbIndicator && dbStatus) {
          apiStatus.textContent = 'error';
          apiIndicator.className = 'w-3 h-3 rounded-full bg-red-500';

          dbStatus.textContent = 'error';
          dbIndicator.className = 'w-3 h-3 rounded-full bg-red-500';

          if (errorMessage && errorContainer) {
            errorMessage.textContent = error.message;
            errorContainer.classList.remove('hidden');
          }
        }
      }
    }

    checkHealth();

    const refreshBtn = document.getElementById('refresh-btn');
    if (refreshBtn) {
      refreshBtn.addEventListener('click', checkHealth);
    }

    gsap.from('#health-card', {
      duration: 0.8,
      y: 50,
      opacity: 0,
      ease: 'power3.out'
    });
  </script>
</Layout>
