---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Lumera - Revolucionando la educaci√≥n en Chile con caminos de aprendizaje adaptativos' } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gradient-to-br from-emerald-50 via-white to-cyan-50 text-gray-900">
    <slot />
  </body>
</html>
