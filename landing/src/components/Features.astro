---

<section id="caracteristicas" class="py-20 px-4 sm:px-6 lg:px-8 bg-white">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-16">
      <div class="inline-block mb-3 px-4 py-1 bg-emerald-100 text-emerald-700 rounded-full text-sm font-semibold">
        Características principales
      </div>
      <h2 class="text-4xl sm:text-5xl font-extrabold text-gray-900 mb-4">
        Cómo funciona <span class="text-transparent bg-clip-text bg-gradient-to-r from-emerald-600 to-cyan-600">Lumera</span>
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Tecnología educativa diseñada para estudiantes chilenos
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {features.map((feature) => (
        <div class="group relative bg-gradient-to-br from-white to-emerald-50 rounded-2xl p-7 shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border-2 border-emerald-100 hover:border-emerald-300">
          <div class="w-14 h-14 mb-4 transform group-hover:scale-110 transition-all duration-300">
            <svg class="w-full h-full text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={feature.iconPath} />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">
            {feature.title}
          </h3>
          <ul class="space-y-2">
            {feature.bullets.map((bullet) => (
              <li class="flex items-start text-gray-700">
                <svg class="w-5 h-5 text-emerald-500 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-sm">{bullet}</span>
              </li>
            ))}
          </ul>
          <div class="mt-5 h-1 w-0 group-hover:w-full bg-gradient-to-r from-emerald-500 to-cyan-500 transition-all duration-500 rounded-full"></div>
        </div>
      ))}
    </div>
  </div>
</section>
